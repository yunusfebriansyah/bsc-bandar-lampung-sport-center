<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_payment"
                android:adjustViewBounds="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Sewa Berhasil Dibuat"
                android:fontFamily="@font/bold"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Silahkan melakukan pembayaran"
            android:fontFamily="@font/regular"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"/>


        <!-- dana -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border_blue_button"
            android:paddingHorizontal="12dp"
            android:paddingVertical="10dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dana"
                android:adjustViewBounds="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0812 3456 7890"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/blue"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AN. JAPRI"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/blue"
                    android:textSize="14sp"/>

            </LinearLayout>

        </LinearLayout>

        <!-- mandiri -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border_blue_old_button"
            android:paddingHorizontal="12dp"
            android:paddingVertical="10dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mandiri"
                android:adjustViewBounds="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0812 3456 7890"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/blue_old"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AN. JAPRI"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/blue_old"
                    android:textSize="14sp"
                    android:layout_marginBottom="5dp"/>

            </LinearLayout>

        </LinearLayout>

        <!-- ditempat -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border_primary_button"
            android:paddingHorizontal="12dp"
            android:paddingVertical="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="bayar langsung ditempat"
                android:fontFamily="@font/bold"
                android:textColor="@color/primary"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="3dp"
                android:textAlignment="center"/>


        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selain bayar langsung ditempat,\nverifikasi pembayaran ke nomor\nwhatsapp dibawah"
            android:fontFamily="@font/regular"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0812 3456 7890"
            android:fontFamily="@font/bold"
            android:textColor="@color/black"
            android:textSize="14sp"/>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>