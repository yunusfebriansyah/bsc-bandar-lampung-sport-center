<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="card_for_image_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="base_container_linearlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top_fragment</item>
        <item name="android:paddingBottom">@dimen/margin_bottom_for_linearlayout</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Title Section Styles -->
    <style name="section_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Title Fragment Styles -->
    <style name="fragment_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Plain text Styles -->
    <style name="plain_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Plain text Styles -->
    <style name="blank_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:text">@string/blank</item>
    </style>

    <!-- Link text Styles -->
    <style name="link_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Link text Styles -->
    <style name="price_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/bold</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Border primary button Styles -->
    <style name="button_primary_border">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border_primary_button</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxHeight">@dimen/button_height</item>
        <item name="android:minHeight">@dimen/button_height</item>
    </style>

    <!-- Primary button Styles -->
    <style name="button_primary">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border_primary_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxHeight">@dimen/button_height</item>
        <item name="android:minHeight">@dimen/button_height</item>
    </style>

    <!-- Warning button Styles -->
    <style name="button_warning">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border_primary_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxHeight">@dimen/button_height</item>
        <item name="android:minHeight">@dimen/button_height</item>
    </style>

    <!-- Danger button Styles -->
    <style name="button_danger">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border_primary_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxHeight">@dimen/button_height</item>
        <item name="android:minHeight">@dimen/button_height</item>
    </style>

</resources>