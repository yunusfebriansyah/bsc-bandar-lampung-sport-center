<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="card_for_image_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="base_container_linearlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top_fragment</item>
        <item name="android:paddingBottom">@dimen/margin_bottom_for_linearlayout</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Title Section Styles -->
    <style name="heading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textSize">30sp</item>
    </style>

    <!-- Label Styles -->
    <style name="label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <!-- Input Styles -->
    <style name="input_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="input_password">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="input_email">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="input_multiline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <!-- Title Section Styles -->
    <style name="section_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!-- Title Fragment Styles -->
    <style name="fragment_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Plain text Styles -->
    <style name="plain_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Plain text Styles -->
    <style name="blank_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:text">@string/blank</item>
    </style>

    <!-- Link text Styles -->
    <style name="link_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/medium</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Error text Styles -->
    <style name="error_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:textColor">@color/danger</item>
        <item name="android:textSize">11sp</item>
        <item name="android:text">@string/error</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Link text Styles -->
    <style name="price_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/bold</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Border primary button Styles -->
    <style name="button_primary_border">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border_primary_button</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxHeight">@dimen/button_height</item>
        <item name="android:minHeight">@dimen/button_height</item>
    </style>

    <!-- Primary button Styles -->
    <style name="button_primary">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/primary_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxHeight">@dimen/button_height</item>
        <item name="android:minHeight">@dimen/button_height</item>
    </style>

    <!-- Warning button Styles -->
    <style name="button_warning">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/warning_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxHeight">@dimen/button_height</item>
        <item name="android:minHeight">@dimen/button_height</item>
    </style>

    <!-- Danger button Styles -->
    <style name="button_danger">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/danger_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxHeight">@dimen/button_height</item>
        <item name="android:minHeight">@dimen/button_height</item>
    </style>

    <!-- Border primary button Styles -->
    <style name="button_small_primary_border">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/border_primary_button</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/plain_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxHeight">@dimen/button_small_height</item>
        <item name="android:minHeight">@dimen/button_small_height</item>
        <item name="android:paddingStart">13dp</item>
        <item name="android:paddingEnd">13dp</item>
    </style>

    <!-- Border primary button Styles -->
    <style name="button_small_primary">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/primary_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/plain_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxHeight">@dimen/button_small_height</item>
        <item name="android:minHeight">@dimen/button_small_height</item>
        <item name="android:paddingStart">13dp</item>
        <item name="android:paddingEnd">13dp</item>
    </style>

</resources>